#!/usr/bin/env bash
set -e

BUILD_DIR="$1"
BP_DIR="$(cd "$(dirname "$0")/.." && pwd)"

echo "Installing fonts from buildpackâ€¦"

FONT_TARGET="$BUILD_DIR/.fonts"
mkdir -p "$FONT_TARGET"

cp -v "$BP_DIR/fonts/"*.ttf "$FONT_TARGET/" || true
cp -v "$BP_DIR/fonts/"*.ttc "$FONT_TARGET/" || true

echo "Fonts installed into $FONT_TARGET"
